    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_hero_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_small"
        android:src="@drawable/empty_image"/>

    <LinearLayout
        android:id="@+id/ll_hero_info"
        android:layout_toRightOf="@id/civ_hero_image"
        android:layout_alignBottom="@id/civ_hero_image"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
        android:id="@+id/tv_hero_name"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hero_name"
        android:layout_marginTop="@dimen/margin_small"
        android:textSize="@dimen/text_20sp" />

        <TextView
        android:id="@+id/tv_hero_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:maxLines="4"
        android:ellipsize="end"
        android:textSize="@dimen/text_small"
        android:text="@string/lorem_ipsum"/>

    </LinearLayout>

    <View
        android:layout_toRightOf="@id/civ_hero_image"
        android:layout_below="@id/ll_hero_info"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/br"
        />

</RelativeLayout>